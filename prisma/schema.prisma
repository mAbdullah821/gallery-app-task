generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ----------------------------------------------------------------------------
// ---------------------------------- Models ----------------------------------
// ----------------------------------------------------------------------------

model User {
    id                 String   @id @default(cuid())
    name               String
    username           String   @unique
    hashedPassword     String
    hashedRefreshToken String?
    createdAt          DateTime @default(now())
    updatedAt          DateTime @updatedAt

    // === RELATIONS ===
    images Image[]
}

model Image {
    id          String   @id @default(cuid())
    fileName    String?
    publicURL   String?
    uploadedAt  DateTime @default(now())
    contentType String?
    size        Int?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt // TODO: drop

    // === FOREIGN KEYS ===
    userId String

    // === RELATIONS ===
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([updatedAt]) // TODO: add the creation time here 
    @@index([size])
    @@index([userId])
}
